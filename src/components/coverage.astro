---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";

const areas = [
  {
    zone: "Madrid Centro",
    districts: ["Sol", "Salamanca", "Chamberí", "Retiro"],
    response: "30 min",
  },
  {
    zone: "Madrid Norte",
    districts: ["Alcobendas", "San Sebastián de los Reyes", "Tres Cantos"],
    response: "45 min",
  },
  {
    zone: "Madrid Sur",
    districts: ["Leganés", "Getafe", "Fuenlabrada", "Móstoles"],
    response: "45 min",
  },
  {
    zone: "Madrid Este",
    districts: ["Coslada", "San Fernando", "Torrejón", "Alcalá"],
    response: "45 min",
  },
];
---

<ContentSection title="Zonas de Cobertura" id="coverage">
  <Fragment slot="lead">
    Servicio técnico en <span class="text-primary">toda la Comunidad</span> de Madrid
  </Fragment>

  <div class="max-w-6xl">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      {
        areas.map(({ zone, districts, response }) => (
          <div class="flex flex-col gap-4 border border-default bg-offset p-6 rounded-xl">
            <div class="flex items-center gap-4">
              <div class="size-12 rounded-full border-2 border-current p-2">
                <Icon name="mdi:map-marker" class="size-full" />
              </div>
              <h3 class="text-xl font-bold">{zone}</h3>
            </div>
            <ul class="space-y-2">
              {districts.map((district) => (
                <li class="flex items-center gap-2 text-sm">
                  <Icon name="mdi:check" class="size-5 text-primary" />
                  <span>{district}</span>
                </li>
              ))}
            </ul>
            <div class="mt-auto flex items-center gap-2 text-sm">
              <Icon name="mdi:clock-fast" class="size-5 text-primary" />
              <span>Tiempo de respuesta: {response}</span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</ContentSection>