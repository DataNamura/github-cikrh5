---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";

const steps = [
  {
    title: "Contacto",
    description: "Llámanos o envía un mensaje describiendo el problema de tu electrodoméstico.",
    icon: "mdi:phone-message",
  },
  {
    title: "Diagnóstico",
    description: "Nuestros técnicos realizarán una evaluación detallada del problema.",
    icon: "mdi:clipboard-search",
  },
  {
    title: "Presupuesto",
    description: "Te proporcionamos un presupuesto claro y sin compromiso.",
    icon: "mdi:cash-check",
  },
  {
    title: "Reparación",
    description: "Realizamos la reparación con repuestos originales y garantía.",
    icon: "mdi:tools",
  },
];
---

<ContentSection title="Proceso" id="process">
  <Fragment slot="lead">
    Reparación <span class="text-primary">simple</span> y
    <span class="text-primary">transparente</span>
  </Fragment>

  <div class="max-w-6xl">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
      {
        steps.map(({ title, description, icon }, index) => (
          <div class="relative flex flex-col items-center gap-4">
            {index < steps.length - 1 && (
              <div class="absolute left-1/2 top-12 hidden h-0.5 w-full bg-current opacity-25 md:block" />
            )}
            <div class="relative">
              <div class="size-24 rounded-full border-2 border-current bg-offset p-4">
                <Icon name={icon} class="size-full" />
              </div>
              <div class="absolute -right-2 -top-2 size-8 rounded-full bg-primary text-center text-white">
                {index + 1}
              </div>
            </div>
            <p class="text-center font-extrabold text-xl">{title}</p>
            <p class="text-center text-offset text-sm">{description}</p>
          </div>
        ))
      }
    </div>
  </div>
</ContentSection>