---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Servicio de Emergencia",
    description:
      "Disponibles 24/7 para atender cualquier emergencia con tus electrodomésticos.",
    icon: "mdi:clock-fast",
  },
  {
    title: "Técnicos Certificados",
    description:
      "Nuestro equipo está certificado y cuenta con años de experiencia en todas las marcas.",
    icon: "mdi:certificate",
  },
  {
    title: "Garantía de Servicio",
    description:
      "Todos nuestros trabajos cuentan con garantía por escrito para tu tranquilidad.",
    icon: "mdi:shield-check",
  },
  {
    title: "Precios Transparentes",
    description:
      "Sin sorpresas ni costos ocultos. Te damos un presupuesto claro antes de comenzar.",
    icon: "mdi:cash",
  },
  {
    title: "Repuestos Originales",
    description:
      "Utilizamos solo repuestos originales para asegurar la durabilidad de la reparación.",
    icon: "mdi:tools",
  },
  {
    title: "Atención Personalizada",
    description:
      "Te mantenemos informado durante todo el proceso de reparación.",
    icon: "mdi:account-voice",
  },
];
---

<ContentSection title="Ventajas" id="features">
  <Fragment slot="lead">
    Confía en los <span class="text-primary">expertos</span>. Más de
    <span class="text-primary">15 años</span> de experiencia nos respaldan.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>