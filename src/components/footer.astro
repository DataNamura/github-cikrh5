---
import { Icon } from "astro-icon/components";

const links = [
  {
    url: "tel:+34900123456",
    description: "Llamar ahora",
    icon: "mdi:phone",
  },
  {
    url: "https://wa.me/34900123456",
    description: "WhatsApp",
    icon: "fa-brands:whatsapp",
  },
  {
    url: "mailto:info@tecnihogar.es",
    description: "Email",
    icon: "mdi:email",
  },
];

const serviceAreas = [
  "Madrid Centro",
  "Norte de Madrid",
  "Sur de Madrid",
  "Este de Madrid",
  "Oeste de Madrid",
];

const schedule = [
  "Lunes a Viernes: 8:00 - 20:00",
  "Sábados: 9:00 - 14:00",
  "Emergencias 24/7",
];
---

<footer id="contact" class="relative bg-offset">
  <div class="mx-auto max-w-7xl px-8 py-16">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div>
        <h3 class="text-2xl font-bold mb-4">TecniHogar</h3>
        <p class="text-offset mb-4">
          Expertos en reparación de electrodomésticos con más de 15 años de experiencia.
          Servicio profesional y garantizado.
        </p>
      </div>
      
      <div>
        <h4 class="font-bold mb-4">Zonas de Servicio</h4>
        <ul class="space-y-2">
          {serviceAreas.map((area) => (
            <li class="text-offset">{area}</li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-bold mb-4">Horario</h4>
        <ul class="space-y-2">
          {schedule.map((time) => (
            <li class="text-offset">{time}</li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-bold mb-4">Contacto</h4>
        <ul class="flex gap-4">
          {
            links.map((link) => (
              <li>
                <a
                  class="flex size-12 items-center justify-center rounded-full border-2 border-current p-3 hover:text-primary"
                  href={link.url}
                >
                  <span class="sr-only">{link.description}</span>
                  <Icon class="size-full" name={link.icon} />
                </a>
              </li>
            ))
          }
        </ul>
        <p class="mt-4 text-offset">
          Servicio técnico oficial de las principales marcas
        </p>
      </div>
    </div>
    <div class="mt-8 border-t border-default pt-8 text-center text-offset">
      <p>© {new Date().getFullYear()} TecniHogar. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>