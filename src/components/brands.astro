---
import ContentSection from "~/components/content-section.astro";

const brands = [
  { name: "LG" },
  { name: "Samsung" },
  { name: "Whirlpool" },
  { name: "Bosch" },
  { name: "Electrolux" },
  { name: "Maytag" },
];
---

<ContentSection title="Marcas" id="brands">
  <Fragment slot="lead">
    Trabajamos con las <span class="text-primary">principales marcas</span> del mercado
  </Fragment>
  <div class="grid max-w-6xl grid-cols-2 gap-8 sm:grid-cols-3 md:grid-cols-6">
    {
      brands.map(({ name }) => (
        <div class="flex items-center justify-center p-4 grayscale transition-all hover:grayscale-0">
          <div class="h-12 flex items-center justify-center font-bold text-xl">
            {name}
          </div>
        </div>
      ))
    }
  </div>
</ContentSection>